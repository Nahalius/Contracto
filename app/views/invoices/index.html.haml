%h1 Издадени Фактури

%table{:class => "table table-striped table-hover ",:id => "invoices2"}
  %thead
    %tr{:class => "success"}
      %th Номер
      %th Дата
      %th Договор
      %th Съставител
      %th Сума
      %th Сума с ДДС
      %th Сума Словом
      %th
      %th Действия
      %th
  %tbody
    - @invoices.each do |invoice|
      %tr
        %td= invoice.number
        %td= invoice.date
        %td= invoice.agreemnt.name
        %td= invoice.manager
        %td= invoice.amount
        %td= invoice.amount*1.2
        %td= invoice.text
        %td= link_to 'Фактура', invoice, class: 'btn btn-primary btn-xs'
        %td= link_to 'Edit', edit_invoice_path(invoice),class: 'btn btn-warning btn-xs'
        %td= link_to 'Изтрий', invoice, :method => :delete, :data => { :confirm => 'Сигурни ли сте че искате да изтриете тази фактура?' },class: 'btn btn-danger btn-xs'

%br

= link_to 'Нова Фактура', new_invoice_path,class: 'btn btn-primary btn-xs'
